  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug form-core tests",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "cwd": "${workspaceFolder}/packages/form-core",
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["--no-file-parallelism", "FormApi.spec.ts"],
      "smartStep": true,
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}
